<Window x:Class="APProjeFrontend.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APProjeFrontend"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="400">
    <Grid>
        <TextBlock Text="Login" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,0"/>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="50,80,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Left" Margin="150,80,0,0" VerticalAlignment="Top" Width="200"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="50,130,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Margin="150,130,0,0" VerticalAlignment="Top" Width="200"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="150,180,0,0" VerticalAlignment="Top" Width="100" Click="LoginButton_Click"/>
        <Button Content="Register" HorizontalAlignment="Left" Margin="260,180,0,0" VerticalAlignment="Top" Width="100" Click="RegisterButton_Click"/>
    </Grid>
</Window>
