<Window x:Class="APProjeFrontend.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APProjeFrontend"
        mc:Ignorable="d"
        Title="Register" Height="300" Width="400">
    <Grid>
        <TextBlock Text="Register" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,0"/>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="50,80,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="RegUsernameTextBox" HorizontalAlignment="Left" Margin="150,80,0,0" VerticalAlignment="Top" Width="200"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="50,130,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="RegPasswordBox" HorizontalAlignment="Left" Margin="150,130,0,0" VerticalAlignment="Top" Width="200"/>
        <Label Content="Confirm Password:" HorizontalAlignment="Left" Margin="50,180,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="ConfirmPasswordBox" HorizontalAlignment="Left" Margin="150,180,0,0" VerticalAlignment="Top" Width="200"/>
        <Button Content="Register" HorizontalAlignment="Left" Margin="150,230,0,0" VerticalAlignment="Top" Width="100" Click="RegisterButton_Click"/>
    </Grid>
</Window>
